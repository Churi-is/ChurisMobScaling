  "name": "Churi's Mob Scaling",
  "description": "Adds a scaling system to mobs, allowing them to grow stronger as the player ventures further from spawn.",
  "authors": [
    "churi"
  ],
  "contact": {},
  "license": "GPLv3",
  "icon": "assets/churismobscaling/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.churismobscaling.ChurisMobScalingMain"
    ],
    "client": [
      "net.churismobscaling.ChurisMobScalingClient"
    ],
    "modmenu": [
      "net.churismobscaling.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "churismobscaling.mixins.json"
  ],
  "depends": {
    "java": ">=21",
    "minecraft": ">=${minecraft_version}",
    "fabric-api": ">=${fabric_version}",
    "fabricloader": ">=${loader_version}",
